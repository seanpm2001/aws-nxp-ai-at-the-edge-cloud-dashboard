.gauge{
  transition-property: all;
  transition-duration: 1s;
}
.belt-wheel-left{
  width: 6%;
  position: absolute;
  top: 10%;
}
.belt-wheel-right{
  width: 6%;
  position: absolute;
  top: 10%;
  right: 0px;
}

.wheel-spin{
  animation-name: 'spin';
  animation-duration: 4000ms;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}

@keyframes spin {
    from {
        transform:rotate(0deg);
    }
    to {
        transform:rotate(360deg);
    }
}