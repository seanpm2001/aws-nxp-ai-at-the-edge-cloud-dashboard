.belt-conveyor{
  background-image: url(/statics/beltConveyor/allBack.svg);
  background-repeat: no-repeat;
  background-position: top center;
  background-size: 100%;
  position: relative;
  margin: 0;
  padding: 0;
  width: 100%;
  padding-top: 50%;
  box-sizing: content-box;
  overflow: overlay;
}
